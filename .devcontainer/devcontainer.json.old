{
    "name": "Ansible Devcontainer",
    "image": "ubuntu:20.04",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {}
    },
    "customizations": { 
        "vscode": {
        "extensions": [
            "ms-azuretools.vscode-docker",
            "briancray.vscode-intelephense-client"
        ]
    }
},
"postCreateCommand": "pipx install --include-deps ansible && useradd ydh && apt update -y && apt upgrade -y && apt install iptables && apt install ufw  && apt install openssh-server && mkdir /etc/sudoers.d && mkdir /home/ydh/  && mkdir /home/ydh/.ssh && touch /home/ydh/.ssh/known_hosts"
}